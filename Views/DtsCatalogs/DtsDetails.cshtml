@model dts_231220886_de02.Models.DtsCatalog

@{
    ViewData["Title"] = "Chi tiết danh mục";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-info-circle"></i> Thông tin danh mục</h3>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <h5 class="fw-bold">Tên danh mục</h5>
                    <p>@Model.DtsCateName</p>
                </div>

                <div class="col-md-3">
                    <h5 class="fw-bold">Giá (VNĐ)</h5>
                    <p>@String.Format("{0:N0}", Model.DtsCatePrice)</p>
                </div>

                <div class="col-md-3">
                    <h5 class="fw-bold">Số lượng</h5>
                    <p>@Model.DtsCateQty</p>
                </div>

                <div class="col-md-6">
                    <h5 class="fw-bold">Ảnh sản phẩm</h5>
                    <div class="border rounded p-2 text-center">
                        @if (!string.IsNullOrEmpty(Model.DtsCatePicture))
                        {
                            <img src="@Url.Content(Model.DtsCatePicture)" alt="Ảnh sản phẩm" class="rounded-3 shadow-sm" style="max-width:200px;" />
                        }
                        else
                        {
                            <p class="text-muted fst-italic">Chưa có ảnh</p>
                        }
                    </div>
                </div>

                <div class="col-md-6">
                    <h5 class="fw-bold">Trạng thái</h5>
                    <p>
                        @if (Model.DtsCateActive == true)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Non-Active</span>
                        }
                    </p>
                </div>
            </div>

            <hr class="my-4" />
            <div class="d-flex justify-content-between">
                <a asp-action="Edit" asp-route-id="@Model?.DtsId" class="btn btn-warning">
                    <i class="bi bi-pencil-square"></i> Chỉnh sửa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại danh sách
                </a>
            </div>
        </div>
    </div>
</div>
