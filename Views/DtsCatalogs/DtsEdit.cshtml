@model dts_231220886_de02.Models.DtsCatalog

@{
    ViewData["Title"] = "Cập nhật danh mục";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Cập nhật danh mục sản phẩm</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="DtsId" />

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="DtsCateName" class="form-label fw-bold">Tên danh mục</label>
                        <input asp-for="DtsCateName" class="form-control" />
                        <span asp-validation-for="DtsCateName" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="DtsCatePrice" class="form-label fw-bold">Giá (VNĐ)</label>
                        <input asp-for="DtsCatePrice" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="DtsCatePrice" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="DtsCateQty" class="form-label fw-bold">Số lượng</label>
                        <input asp-for="DtsCateQty" class="form-control" type="number" />
                        <span asp-validation-for="DtsCateQty" class="text-danger"></span>
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6 text-center">
                        <label class="form-label fw-bold">Ảnh hiện tại</label>
                        <div class="border rounded p-2">
                            @if (!string.IsNullOrEmpty(Model.DtsCatePicture))
                            {
                                <img src="@Url.Content(Model.DtsCatePicture)" alt="Ảnh sản phẩm" class="rounded-3 shadow-sm" style="max-width:180px;" />
                            }
                            else
                            {
                                <p class="text-muted fst-italic">Chưa có ảnh</p>
                            }
                        </div>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Chọn ảnh mới</label>
                        <input type="file" name="UploadImage" class="form-control" accept="image/*" onchange="previewImage(event)" />
                        <div class="mt-2 text-center">
                            <img id="imgPreview" src="#" alt="Preview" style="display:none; max-width:200px; border-radius:10px; border:1px solid #ddd; padding:3px;" />
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-3 d-flex align-items-center">
                        <div class="form-check form-switch">
                            <input asp-for="DtsCateActive" class="form-check-input" type="checkbox" />
                            <label class="form-check-label fw-bold">
                                @(Model.DtsCateActive == true ? "Kích hoạt" : "Không kích hoạt")
                            </label>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại danh sách
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            const img = document.getElementById('imgPreview');
            img.src = URL.createObjectURL(event.target.files[0]);
            img.style.display = 'block';
        }
    </script>
    @Html.Partial("_ValidationScriptsPartial")
}
