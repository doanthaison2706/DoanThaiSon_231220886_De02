@model dts_231220886_de02.Models.DtsCatalog

@{
    ViewData["Title"] = "Create Dts Catalog";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">➕ Thêm sản phẩm mới</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Thêm enctype để upload file -->
            <form asp-action="dtsCreate" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="DtsId" class="form-label fw-bold"></label>
                    <input asp-for="DtsId" class="form-control" placeholder="Nhập mã danh mục..." />
                    <span asp-validation-for="DtsId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DtsCateName" class="form-label fw-bold"></label>
                    <input asp-for="DtsCateName" class="form-control" placeholder="Nhập tên danh mục..." />
                    <span asp-validation-for="DtsCateName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DtsCatePrice" class="form-label fw-bold"></label>
                    <input asp-for="DtsCatePrice" class="form-control" placeholder="Giá sản phẩm..." type="number" step="0.01" />
                    <span asp-validation-for="DtsCatePrice" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="DtsCateQty" class="form-label fw-bold"></label>
                    <input asp-for="DtsCateQty" class="form-control" placeholder="Số lượng..." type="number" />
                    <span asp-validation-for="DtsCateQty" class="text-danger"></span>
                </div>

                <!-- Upload ảnh + preview -->
                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Ảnh sản phẩm</label>
                    <input type="file" name="ImageFile" class="form-control" accept="image/*" onchange="previewImage(event)" />
                    <div class="mt-2 text-center">
                        <img id="imgPreview" src="#" alt="Preview" style="display:none; max-width:150px; border-radius:10px; border:1px solid #ddd; padding:3px;" />
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label class="form-label fw-bold">Trạng thái</label>
                    <select asp-for="DtsCateActive" class="form-select">
                        <option value="true">Active</option>
                        <option value="false">Non-Active</option>
                    </select>
                    <span asp-validation-for="DtsCateActive" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">← Quay lại</a>
                    <button type="submit" class="btn btn-primary px-4">💾 Lưu</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewImage(event) {
            const img = document.getElementById('imgPreview');
            img.src = URL.createObjectURL(event.target.files[0]);
            img.style.display = 'block';
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
